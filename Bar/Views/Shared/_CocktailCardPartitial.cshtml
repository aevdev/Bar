@model Cocktail


<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.picture_link" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.name</h5>
                <p class="card-text">@Model.sub_name</p>
                <p class="card-text"><small class="text-body-secondary">@Model.year</small></p>
                <a class="btn btn-primary" asp-controller="Home" asp-action="Detail">Детали</a>
            </div>
        </div>
    </div>
</div>