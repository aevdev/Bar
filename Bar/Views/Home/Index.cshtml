@{
    ViewData["Title"] = "Index";
}
@model List<Cocktail>
<form style="margin-top: 25px" method="get" action="/Home/Search" class="d-flex" role="search">
    <input name="searchTitle" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success" type="submit">Search</button>
</form>

<div class="container-fluid">
    <div style="margin-top: 25px" class="container">
        <div class="row">
            @foreach (var item in @Model)
            {
                <div class="col-3">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-12">
                                <img src="@item.picture_link" class="img-fluid rounded-start" alt="...">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.name</h5>
                                    <p class="card-text">@item.sub_name</p>
                                    <p class="card-text"><small class="text-body-secondary">@item.year</small></p>

                                    <a class="btn btn-primary" asp-controller="Home" asp-action="Details">Detail</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

